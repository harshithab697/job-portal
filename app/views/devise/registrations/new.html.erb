  <div class="limiter">
    <div class="container-login100">
      <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-50">
        <div class="container d-flex justify-content-center align-items-center"  >
          <div class = "d-flex flex-column" style="width: 100%">
            <span class="login100-form-title p-b-33">
              <h2>Sign up</h2>
            </span>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name),html: {class: "login100-form validate-form" }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

             <div class="wrap-input100 validate-input">
               <%= f.email_field :email, autofocus: true,class: "input100", placeholder: "Email" %>
               <span class="focus-input100-1"></span>
               <span class="focus-input100-2"></span>
            </div>

            <div class="wrap-input100 rs1 validate-input">
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password,class: "input100",placeholder: "Password" %>
              <span class="focus-input100-1"></span>
              <span class="focus-input100-2"></span>
            </div>

            <div class="wrap-input100 rs1 validate-input">
             <%= f.password_field :password_confirmation,class: "input100",placeholder: " Retype Password" %>
             <span class="focus-input100-1"></span>
             <span class="focus-input100-2"></span>
            </div>

            <div class="container-login100-form-btn m-t-20">
              <div class="actions">
                <%= f.submit "Sign up", class: "login100-form-btn" %>
              </div>
            </div>
            <% end %>

            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>