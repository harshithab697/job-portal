<%= form_with(model: job, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :salary %>
    <%= form.number_field :salary, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :experience %>
    <%= form.number_field :experience, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :job_location %>
    <%= form.text_field :job_location, class: "form-control" %>
  </div>

  <%= form.hidden_field :recruiter_id, { :value => current_recruiter.id } %>

  <div class="actions">
    <%= form.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>

