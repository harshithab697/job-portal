<h1>Edit your profile</h1>
<% if current_user.instance_of? JobSeeker %>
	
	<%= form_with model: @user, url: {controller: "profiles", action: "update"} do |form|%>

			<div class="form-group">
				<%= form.label :name %>
				<%= form.text_field :name, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= form.label :qualification %>
				<%= form.text_field :qualification, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= form.label :skills %>
				<%= form.text_area :skills, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= form.label :dob %>
				<%= form.text_field :dob, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= form.label :experience %>
				<%= form.text_field :experience, class: "form-control" %>
			</div>

			<div class="actions">
				<%= form.submit %>
			</div>
	<% end %>

<% elsif current_user.instance_of? Recruiter %>
		

			<%= form_with model: @user, url: {controller: "profiles", action: "update"} do |form|%>

				<div class="form-group">
					<%= form.label :c_name %>
					<%= form.text_field :cname , class: "form-control"%>
				</div>

				<div class="form-group">
					<%= form.label :description %>
					<%= form.text_area :description, class: "form-control" %>
				</div>

				<div class="form-group">
					<%= form.label :c_location %>
					<%= form.text_field :clocation, class: "form-control" %>
				</div>

				<div class="form-group">
					<%= form.label :c_size%>
					<%= form.text_field :csize, class: "form-control" %>
				</div>	
		
				<div class="actions">
					<%= form.submit %>
				</div>
			<% end %>
<% end %>

<%= link_to 'Show', dashboard_profiles_show_path %>